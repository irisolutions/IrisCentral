{% extends 'DashboardBundle:Developer:base.html.twig' %}
{% block head %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<style type="text/css">
    h1{
        margin: 30px 0;
        padding: 0 200px 15px 0;
        border-bottom: 1px solid #E5E5E5;
    }
	.bs-example{
    	margin: 20px;
    }
    .form-style-2-heading{
    font-weight: bold;

    border-bottom: 1px solid #ddd;
    margin-bottom: 40px;
    margin-top:40px;
    font-size: 15px;
    padding-bottom: 3px;
        text-align: center;
}
    .cont {
        width: 80%;
        margin: auto;
        margin-top: 90px;
        border: 1px solid gainsboro;
        border-radius: 5px;
    }
    .control-label{
        font-size: 12px;
    }

</style>
 
 {% endblock  %}

{% block breadcrumb %}
{% if update == false %}
Developer Dashboard &rsaquo; New Version
{% else %}
Developer Dashboard &rsaquo; Update Version
{% endif %}
   {#  <a href="{{ path('category', {'slug': application.category.slug}) }}">{{ application.category.name }}</a> &rsaquo; {{ application.name }} #}
{% endblock %}

{% block body %}
   <div class="bs-example">
    <!-- <h1>New Application</h1> -->



       <form class="form-horizontal" method="post" enctype="multipart/form-data" >
           <div class="row cont">
        <div class="form-style-2-heading">Name & Identification Information</div>
        <div class="form-group">
            <label class="control-label col-xs-2" for="firstName">Application Identifier:</label>
            <div class="col-xs-9">
                <input type="text" class="form-control" id="app-identifier" name="app-identifier" value ="{{application.ID}}" readonly>
            </div>
        </div> 
        <div class="form-group">
            <label class="control-label col-xs-2" for="inputEmail">Application Name:</label>
            <div class="col-xs-9">
                <input type="text" class="form-control" name="app-name" id="app-name" value ="{{application.Name}}" readonly>
            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label col-xs-2" for="lastName">Application Version:</label>
            <div class="col-xs-1">
                <input type="text" class="form-control" name="app-version" id="app-version" {% if update == true%}  value ="{{application.Version}}" readonly{% endif %} placeholder="e.g. 1.5" required>
                </div>     
                <label class="control-label" for="inputEmail">(Must match manifest version of the two binary apps below)</label>
                       
        </div>
           </div>
        <!--
	<div class="form-style-2-heading">Subscription Bundles</div>  
        <div class="row">
         <div class="col-xs-6"> 
        <div class="form-group">
  		<label class="control-label col-xs-offset-1" for="selectmultiple">Application Bundles (you can select multiple bundles)</label>             
  		
   		 	<select id="selectmultiple" name="app-bundle" class="form-control col-xs-offset-1" multiple="multiple">
     		 	<option value="1">Basic</option>
      			<option value="2">Kindergarden</option>
   		 	</select>
  		</div>
        </div>    
        </div>    
        -->
           <div class="row cont">
        <div class="form-style-2-heading col-xs-12">Application Binary</div>


        <div class="form-group">
            <label class="control-label col-xs-2" for="firstName">Binary:</label>
            <div class="col-xs-9">
                <input type="file"  id="app-binary" name="app-binary" required>
            </div>
        </div>

        <div class="form-group">
        	{% if update == false %}
                <input type="submit" class="btn btn-primary" style="margin:20px;border:1px solid #aaa;float: right" value="Add New Version">
            {% else %}
            	<input type="submit" class="btn btn-primary" style="margin:20px;border:1px solid #aaa; float: right" value="Update Version">
            {% endif %}
             </div>
           </div>
             
        
    </form>
       </div>
</div>
{% endblock %}