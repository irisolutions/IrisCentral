{% extends 'DashboardBundle:Developer:base.html.twig' %}
{% block head %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<style type="text/css">
    h1{
        margin: 30px 0;
        padding: 0 200px 15px 0;
        border-bottom: 1px solid #E5E5E5;
    }
	.bs-example{
    	margin: 20px;
    }
    .form-style-2-heading{
    font-weight: bold;
    font-style: italic;
    border-bottom: 2px solid #ddd;
    margin-bottom: 40px;
    margin-top:40px;
    font-size: 15px;
    padding-bottom: 3px;
}
</style>

 {% endblock  %}

{% block breadcrumb %}
{% if update == false %}
Developer Dashboard &rsaquo; New App
{% else %}
Developer Dashboard &rsaquo; Update App
{% endif %}
   {#  <a href="{{ path('category', {'slug': application.category.slug}) }}">{{ application.category.name }}</a> &rsaquo; {{ application.name }} #}
{% endblock %}

{% block body %}

   <div class="bs-example">

    <!-- <h1>New Application</h1> -->
    <form class="form-horizontal" method="post" >
        <div class="form-style-2-heading">Name & Type Information</div>
		<div class="form-group">
            <label class="control-label col-xs-2" for="inputEmail">App String Key:</label>
            <div class="col-xs-9">
                <input type="text" class="form-control" name="app-stringkey" id="app-stringkey" {% if update == true%}  value ="{{application.KeyString}}" {% endif %} >
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-2" for="inputEmail">Apk Name:</label>
            <div class="col-xs-9">
                <input type="text" class="form-control" name="app-apkname" id="app-apkname" {% if update == true%}  value ="{{application.ApkName}}" {% endif %} >
            </div>
        </div>
         <div class="form-group">
            <label class="control-label col-xs-2" for="inputEmail">Apk ID:</label>
            <div class="col-xs-9">
                <input type="text" class="form-control" name="app-apkid" id="app-apkid" {% if update == true%}  value ="{{application.ApkID}}" {% endif %} >
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-2">App Category:</label>
            <div class="col-xs-3">
                <select class="form-control" name="app-category">

                    {% for cat in categories %}
                    {% if application.Category is defined and cat.ID == application.Category  %}
                     <option value='{{cat.ID}}' selected="true">{{cat.Name}}</option>
                     {% else %}
                     <option value='{{cat.ID}}'>{{cat.Name}}</option>
                     {% endif%}
                    {% endfor %}
                </select>
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-xs-2">Game Type:</label>
            <div class="col-xs-3">
                <select class="form-control" name="app-type">

                    {% for type in types %}
                    {% if application.Type is defined and type.Name == application.Type  %}
                     <option value='{{type.Name}}' selected="true">{{type.Name}}</option>
                     {% else %}
                     <option value='{{type.Name}}'>{{type.Name}} </option>
                     {% endif%}
                    {% endfor %}
                </select>
            </div>
        </div>

  <div class="form-style-2-heading col-xs-12">Visual Resources</div>

        <div class="form-group">
            <label class="control-label col-xs-2" for="firstName">Resources Directory:</label>
            <div class="col-xs-4">
                <input type="text" class="form-control" id="app-resources" name="app-resources" {% if update == true%}  value ="{{application.Resources}}" {% endif %}>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-xs-2" for="firstName">App Icon:</label>
            <div class="col-xs-8">
                <input type="text" class="form-control" id="app-icon" name="app-icon" {% if update == true%}  value ="{{application.Icon}}" {% endif %}>
            </div>
        </div>

        <div class="form-group">
        	{% if update == false %}
                <input type="submit" class="btn btn-primary" style="margin:20px;border:4px solid #aaa;" value="Add New App">
            {% else %}
            	<input type="submit" class="btn btn-primary" style="margin:20px;border:4px solid #aaa;" value="Update App">
            {% endif %}
             </div>


    </form>
</div>
{% endblock %}
