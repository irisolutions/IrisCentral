{% extends 'DashboardBundle:Developer:base.html.twig' %}
{% block head %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css"
          integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
            crossorigin="anonymous"></script>

    <style type="text/css">
        h1 {
            margin: 30px 0;
            padding: 0 200px 15px 0;
            border-bottom: 1px solid #E5E5E5;
        }

        .bs-example {
            margin: 20px;
        }

        .form-style-2-heading {
            font-weight: bold;

            border-bottom: 1px solid #ddd;
            margin-bottom: 40px;
            margin-top: 40px;
            font-size: 15px;
            padding-bottom: 3px;
            text-align: center;
        }

        .cont {
            width: 80%;
            margin: auto;
            margin-top: 90px;
            border: 1px solid gainsboro;
            border-radius: 5px;
        }

        .control-label {
            font-size: 12px;
        }

        @media only screen and (max-width: 771px) {
            .cont {
                width: 95% !important;
            }

            .control-label {

                margin-left: 10px;
            }

            .bs-example {
                margin: 0px;
            }

        }

        @media only screen and (max-width: 571px) {
            .control-label {
                font-size: 10px !important;
                margin-left: 10px;
            }
        }

        .lab {
            margin-left: 10px;
        }
        img{
            display: block;
            margin: auto;
            margin-bottom: 20px;
            height: 230px !important;
        }
    </style>

{% endblock %}

{% block breadcrumb %}
    {% if app1 == false %}
        Developer Dashboard &rsaquo; {{ app1 }} &rsaquo; Set Icon
    {% endif %}
{% endblock %}
{% block body %}
    <div class="bs-example" >
        <form class="form-horizontal" method="post" enctype="multipart/form-data" style="align-content: center">
            <div class="row cont">
                <div class="form-style-2-heading">Edit\Add Icon</div>
                <div class="form-group">
                    <label class="control-label col-xs-2" for="firstName">Icon:</label>
                    <div class="col-xs-9 lab">
                        <input type="file" class="form-control" id="app-icon" name="app-icon" required>
                    </div>
                    <input type="submit" class="btn btn-primary" style="margin:20px;border:1px solid #aaa;float: right"
                           value="Upload Icon">
                </div>
            </div>
            <div class="row cont" style="align-content: center">
                <div class="form-style-2-heading">Current icon</div>
                <img class=" image-style"style="" src="{{ asset('images/icons/'~ app1 ~'.png') }}" alt="no image">

            </div>

        </form>
    </div>
{% endblock %}