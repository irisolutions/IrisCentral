{% extends 'DashboardBundle:Developer:base.html.twig' %}
{% block head %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<style type="text/css">
    h1{
        margin: 30px 0;
        padding: 0 200px 15px 0;
        border-bottom: 1px solid #E5E5E5;
    }
	.bs-example{
    	margin: 20px;
    }
    .form-style-2-heading{
    font-weight: bold;
    font-style: italic;
    border-bottom: 2px solid #ddd;
    margin-bottom: 40px;
    margin-top:40px;
    font-size: 15px;
    padding-bottom: 3px;
}
</style>

 {% endblock  %}

{% block breadcrumb %}
{% if update == false %}
Developer Dashboard &rsaquo; New Media
{% else %}
Developer Dashboard &rsaquo; Update Media
{% endif %}
   {#  <a href="{{ path('category', {'slug': application.category.slug}) }}">{{ application.category.name }}</a> &rsaquo; {{ application.name }} #}
{% endblock %}

{% block body %}

   <div class="bs-example">

    <!-- <h1>New Application</h1> -->
    <form class="form-horizontal" method="post" >
        <div class="form-style-2-heading">Name & Type Information</div>
		<div class="form-group">
            <label class="control-label col-xs-2" for="inputEmail">Media Name:</label>
            <div class="col-xs-9">
                <input type="text" class="form-control" name="media-name" id="media-name" {% if update == true%}  value ="{{media.Name}}" {% endif %} >
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-2">Media Category:</label>
            <div class="col-xs-3">
                <select class="form-control" name="media-category">

                    {% for cat in categories %}
                    {% if media.Category is defined and cat.ID == media.Category  %}
                     <option value='{{cat.ID}}' selected="true">{{cat.ID}} ({{cat.Type}})</option>
                     {% else %}
                     <option value='{{cat.ID}}'>{{cat.ID}} ({{cat.Type}})</option>
                     {% endif%}
                    {% endfor %}
                </select>
            </div>
        </div>

  <div class="form-style-2-heading col-xs-12">Associated Cloud Resources</div>

        <div class="form-group">
            <label class="control-label col-xs-2" for="firstName">Bucket File:</label>
            <div class="col-xs-4">
                <input type="text" class="form-control" id="media-bucket" name="media-bucket" {% if update == true%}  value ="{{media.Bucket_Name}}" {% endif %}>
            </div>
        </div>

        <div class="form-group">
        	{% if update == false %}
                <input type="submit" class="btn btn-primary" style="margin:20px;border:4px solid #aaa;" value="Add New Media">
            {% else %}
            	<input type="submit" class="btn btn-primary" style="margin:20px;border:4px solid #aaa;" value="Update Media">
            {% endif %}
             </div>


    </form>
</div>
{% endblock %}
