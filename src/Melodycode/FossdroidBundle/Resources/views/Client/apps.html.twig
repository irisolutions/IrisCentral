{% extends 'MelodycodeFossdroidBundle::base.html.twig' %}
{% block title %}My Applications{% endblock %}

{% block breadcrumb %}
My Applications
{% endblock %}

{% block body %}
<div style="width:60%; margin: auto; margin-top:3%;">
    <div class="appLabel"><h4 style="margin-bottom: 15px;font-family: Serif; font-size: 30px">Purchased Applications</h4></div>
    <hr>

<div class="datagrid">
 <table>
        <thead>
          <tr>
              <th>Name</th>
           {#   <th>Version</th> #}
              <th>Price</th>
          </tr>
        </thead>

        <tbody>
        {% for app in purchased %}
          <tr>
            <td><a class="blue-anchor" href="{{ path('application_', {'slug': app.ID}) }}">{{ app.Name }}</a></td>
       {#     <td>{{ app.Version }}</td> #}
            <td>{{ app.Price }}$</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      </div>
  {# Applications Owned via subscriptions#}
    <div><h4 style="margin-bottom: 15px;font-family: Serif; font-size: 30px">Applications Via Subscriptions</h4></div>
    <hr>

<div class="datagrid">
 <table>
        <thead>
          <tr>
              <th>Name</th>
        {#      <th>Version</th> #}
              <th>Bundle</th>
          </tr>
        </thead>

        <tbody>
        {% for app in subscribed %}
          <tr>
            <td><a class="blue-anchor"  href="{{ path('application_', {'slug': app.ID}) }}">{{ app.Name }}</a></td>
      {#      <td>{{ app.Version }}</td>  #}
            <td><a  class="blue-anchor" href="{{ path('bundle', {'slug': app.BundleID}) }}">{{ app.BundleName }}</a></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      </div>
      
      </div>

{% endblock %}
