{% extends 'MelodycodeFossdroidBundle::base.html.twig' %}
{% block title %}My Bundles/Subscriptions{% endblock %}

{% block breadcrumb %}
My Bundles/Subscriptions
{% endblock %}

{% block body %}
<div class="subcont" style="width:60%; margin: auto; margin-top:5%;">
    <div class="subsLabel"><h4 style="margin-bottom: 22px;font-family: Serif; font-size: 35px">Purchased Bundles</h4></div>
<hr>
<div class="datagrid">
 <table>
        <thead>
          <tr>
              <th>Bundle Name</th>
              <th>Subscription Start</th>
              <th>Subscription End</th>
          </tr>
        </thead>

        <tbody>
        {% for bundle in subs %}
          <tr>
            <td><a class="blue-anchor" href="{{ path('bundle', {'slug': bundle.ID}) }}">{{ bundle.Name }}</a></td>
            <td>{{ bundle.Start }}</td>
            <td>{{ bundle.End }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      </div>
      </div>
  
{% endblock %}
